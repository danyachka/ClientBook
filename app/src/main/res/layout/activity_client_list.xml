<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ClientListActivity"

    android:background="@color/gray_trans"

    android:paddingHorizontal="36dp">

    <LinearLayout
        android:id="@+id/top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="14dp">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"

            android:background="@drawable/rect"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserratsemibold"

            android:hint="@string/search_by_name"
            android:inputType="text"
            android:maxLength="24"
            android:maxLines="1"

            android:paddingHorizontal="14sp"
            android:textColor="@color/accent_medium"
            android:textColorHint="@color/accent_medium" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="0"

            android:layout_marginStart="6dp"
            android:padding="8dp"
            android:background="@drawable/rect"
            android:backgroundTint="@color/white"

            android:src="@drawable/ic_settings"
            app:tint="@color/accent"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="128dp"

        android:layout_marginTop="14dp"

        app:layout_constraintTop_toBottomOf="@id/top_bar_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:cardCornerRadius="30dp"
        app:cardElevation="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>