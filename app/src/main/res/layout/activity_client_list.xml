<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ClientListActivity"

    android:background="@color/white"

    android:paddingHorizontal="36dp">

    <LinearLayout
        android:id="@+id/top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="14dp">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_weight="1"

            android:background="@drawable/rect_bordered"
            android:fontFamily="@font/montserratsemibold"

            android:hint="@string/search_by_name"

            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLength="24"
            android:maxLines="1"

            android:paddingHorizontal="16sp"
            android:textColor="@color/accent_medium"
            android:textColorHint="@color/accent_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="0"


            android:layout_marginStart="6dp"
            android:padding="11dp"
            android:background="@drawable/rect_bordered">

            <ImageView
                android:id="@+id/search_type_name"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:src="@drawable/ic_person"
                app:tint="@color/accent"/>

            <ImageView
                android:id="@+id/search_type_phone"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginStart="6dp"

                android:src="@drawable/ic_phone"
                app:tint="@color/accent_medium"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="14dp"

        android:gravity="top"

        app:layout_constraintTop_toBottomOf="@id/top_bar_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/white"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>